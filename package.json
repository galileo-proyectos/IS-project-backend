{
  "name": "is-project-backend",
  "version": "1.0.0",
  "description": "This is the backend of a supermarket app",
  "main": "app.js",
  "repository": "git@github.com:Alssdev/IS-project-backend.git",
  "author": "Alessandro & Gaby",
  "license": "MIT",
  "private": true,
  "scripts": {
    "tsc-init": "tsc --init",
    "dev": "nodemon dist/app.js",
    "build:watch": "tsc --build tsconfig.json --watch",
    "build": "tsc --build tsconfig.json && cp -r src/views dist/views && cp -r src/ca-certificate.crt dist/ca-certificate.crt",
    "lint": "eslint src/**/*.ts",
    "start": "node dist/app.js",
    "build:digitalocean": "yarn install --production=false && yarn run build && rm -rf node_modules && yarn install --production --frozen-lockfile && cp -r src/views dist/views && cp -r src/ca-certificate.crt dist/ca-certificate.crt"
  },
  "dependencies": {
    "@types/nodemailer": "^6.4.10",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-handlebars": "^7.1.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "mysql2": "^3.6.0",
    "nodemailer": "^6.9.5",
    "typescript": "^5.2.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-handlebars": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.5",
    "@types/uuid": "^9.0.4",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "eslint": "^8.0.1",
    "eslint-config-standard-with-typescript": "^39.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-promise": "^6.0.0",
    "nodemon": "^3.0.1"
  }
}
